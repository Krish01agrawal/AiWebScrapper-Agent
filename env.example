# =============================================================================
# AI Web Scraper Environment Configuration Template
# =============================================================================
# 
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control
# 
# Quick Setup:
# 1. cp env.example .env
# 2. Edit .env with your actual values
# 3. Run: python scripts/preflight_check.py
# 
# =============================================================================

# =============================================================================
# REQUIRED: Critical Configuration
# =============================================================================

# Google Gemini API Key - REQUIRED
# Get your API key from: https://makersuite.google.com/app/apikey
# Format: AIzaSy... (39 characters)
# Required: Must be at least 20 characters
GEMINI_API_KEY=your_api_key_here  # Required

# MongoDB Connection String - REQUIRED
# Local MongoDB: mongodb://localhost:27017
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
# Docker: mongodb://mongodb:27017
# Required: Must start with mongodb:// or mongodb+srv://
MONGODB_URI=mongodb://localhost:27017  # Required

# MongoDB Database Name - REQUIRED
# Database name (alphanumeric and underscores)
# Required: Database name (alphanumeric and underscores)
MONGODB_DB=traycer_try  # Required

# =============================================================================
# OPTIONAL: MongoDB Advanced Configuration
# =============================================================================

# MongoDB Connection Pool Settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_CONNECT_TIMEOUT_MS=10000

# =============================================================================
# OPTIONAL: Google Gemini API Configuration
# =============================================================================

# Gemini API Settings
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=1000
GEMINI_MAX_CONTENT_LENGTH=4000
GEMINI_MAX_SIMILARITY_CONTENT_LENGTH=1000

# =============================================================================
# OPTIONAL: Agent Configuration
# =============================================================================

# Agent Timeout Settings (Range: 5-300 seconds)
AGENT_TIMEOUT_SECONDS=30
PARSER_TIMEOUT_SECONDS=45
CATEGORIZER_TIMEOUT_SECONDS=30
PROCESSOR_TIMEOUT_SECONDS=60

# Agent Retry and Quality Settings
AGENT_MAX_RETRIES=3
AGENT_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# OPTIONAL: Web Scraper Configuration
# =============================================================================

# Scraper Performance Settings
SCRAPER_CONCURRENCY=5
SCRAPER_REQUEST_TIMEOUT_SECONDS=20
SCRAPER_DELAY_SECONDS=1.0
SCRAPER_MAX_RETRIES=3
SCRAPER_MAX_REDIRECTS=5
SCRAPER_CONTENT_SIZE_LIMIT=10485760

# Scraper Behavior Settings
SCRAPER_USER_AGENT=TrayceAI-Bot/1.0
SCRAPER_RESPECT_ROBOTS=true

# =============================================================================
# OPTIONAL: Content Processing Configuration
# =============================================================================

# Processing Performance Settings
PROCESSING_TIMEOUT_SECONDS=60
PROCESSING_MAX_RETRIES=2
PROCESSING_CONCURRENCY=3
PROCESSING_BATCH_SIZE=10
CONTENT_PROCESSING_TIMEOUT=30
MAX_CONCURRENT_AI_ANALYSES=5
MAX_PROCESSING_MEMORY=512

# Processing Feature Toggles (Values: true, false)
ENABLE_CONTENT_CLEANING=true
ENABLE_AI_ANALYSIS=true
ENABLE_SUMMARIZATION=true
ENABLE_STRUCTURED_EXTRACTION=true
ENABLE_DUPLICATE_DETECTION=true

# Quality and Similarity Thresholds (Range: 0.0-1.0)
SIMILARITY_THRESHOLD=0.8
MIN_CONTENT_QUALITY_SCORE=0.4

# Content Processing Limits
MAX_SUMMARY_LENGTH=500
PROCESSING_MAX_SIMILARITY_CONTENT_PAIRS=50
PROCESSING_MAX_SIMILARITY_BATCH_SIZE=10

# =============================================================================
# OPTIONAL: Database Configuration
# =============================================================================

# Database Performance Settings
DATABASE_QUERY_TIMEOUT_SECONDS=30
DATABASE_MAX_RETRIES=3
DATABASE_BATCH_SIZE=100
DATABASE_CACHE_TTL_SECONDS=3600
DATABASE_MAX_CONTENT_SIZE_MB=50

# Database Feature Toggles (Values: true, false)
DATABASE_ENABLE_TEXT_SEARCH=true
DATABASE_ENABLE_CONTENT_TTL=false
DATABASE_ENABLE_CACHING=true
DATABASE_ENABLE_COMPRESSION=true
DATABASE_INDEX_BACKGROUND=true
DATABASE_ENABLE_PROFILING=false

# Data Retention Settings (Range: 1-3650 days)
DATABASE_CONTENT_TTL_DAYS=90
DATABASE_ANALYTICS_RETENTION_DAYS=365

# =============================================================================
# OPTIONAL: Health Check Configuration
# =============================================================================

# Health Check Timeouts (Range: 1-30 seconds)
HEALTH_AGENT_TEST_TIMEOUT=5
HEALTH_PROCESSING_TEST_TIMEOUT=8

# =============================================================================
# OPTIONAL: API Configuration
# =============================================================================

# API Performance Settings
API_REQUEST_TIMEOUT_SECONDS=300
API_MAX_QUERY_LENGTH=1000
API_MAX_RESULTS_PER_REQUEST=50
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# API Feature Toggles (Values: true, false)
API_ENABLE_REQUEST_LOGGING=true
API_ENABLE_ANALYTICS_TRACKING=true
API_ENABLE_DETAILED_ERRORS=true
API_ENABLE_PROGRESS_TRACKING=true
API_DEFAULT_PROCESSING_CONFIG=true
API_ENABLE_DATABASE_STORAGE=true

# =============================================================================
# OPTIONAL: Application Settings
# =============================================================================

# Application Environment (Values: development, staging, production)
ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=INFO

# Debug Mode (Values: true, false)
# Note: Set to false in production for security
DEBUG=true

# Security Settings
SECRET_KEY=change_me_in_production

# CORS Configuration (Format: origin1,origin2,origin3)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Environment-Specific Notes
# =============================================================================
# 
# Development:
# - DEBUG=true
# - LOG_LEVEL=DEBUG
# - API_ENABLE_DETAILED_ERRORS=true
# - DATABASE_ENABLE_PROFILING=true
# 
# Production:
# - DEBUG=false
# - LOG_LEVEL=INFO
# - API_ENABLE_DETAILED_ERRORS=false
# - DATABASE_ENABLE_PROFILING=false
# - Use strong SECRET_KEY
# - Configure proper ALLOWED_ORIGINS
# 
# =============================================================================
