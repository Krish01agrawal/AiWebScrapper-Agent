# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=traycer_try
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_CONNECT_TIMEOUT_MS=10000

# Google Gemini API
GEMINI_API_KEY=AIzaSyA6hEOGVhyN7EuIFrcpr84YyzL0KXcM9N4

# Gemini Configuration
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=1000

# Agent Configuration
AGENT_TIMEOUT_SECONDS=30
PARSER_TIMEOUT_SECONDS=45
CATEGORIZER_TIMEOUT_SECONDS=30
PROCESSOR_TIMEOUT_SECONDS=60
AGENT_MAX_RETRIES=3
AGENT_CONFIDENCE_THRESHOLD=0.7
ENABLE_AGENT_LOGGING=true

# Scraper Configuration
# Maximum concurrent requests for web scraping
SCRAPER_CONCURRENCY=5
# Individual request timeout for web scraping in seconds
SCRAPER_REQUEST_TIMEOUT_SECONDS=20
# Politeness delay between requests to the same domain in seconds
SCRAPER_DELAY_SECONDS=1.0
# User agent string for identifying the scraper bot
SCRAPER_USER_AGENT="TrayceAI-Bot/1.0"
# Whether to respect robots.txt files for ethical scraping
SCRAPER_RESPECT_ROBOTS=true
# Maximum retries for failed scraping requests
SCRAPER_MAX_RETRIES=3
# Maximum number of redirects to follow
SCRAPER_MAX_REDIRECTS=5
# Maximum content size limit in bytes (10MB default)
SCRAPER_CONTENT_SIZE_LIMIT=10485760

# Security
SECRET_KEY=change_me_in_production

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# API Configuration
API_TITLE=Traycer Try API
API_VERSION=1.0.0
API_DESCRIPTION=FastAPI application with MongoDB and Gemini AI integration

# Note: Ethical Scraping Practices
# This application is designed to respect website terms of service and robots.txt files.
# Please ensure you have permission to scrape any website and follow their rate limiting guidelines.
# The scraper includes built-in delays and robots.txt compliance to be respectful to websites.

# =============================================================================
# PROCESSING PIPELINE CONFIGURATION
# =============================================================================

# Enable/disable content cleaning in processing pipeline
ENABLE_CONTENT_CLEANING=true

# Enable/disable AI analysis in processing pipeline
ENABLE_AI_ANALYSIS=true

# Enable/disable content summarization in processing pipeline
ENABLE_SUMMARIZATION=true

# Enable/disable structured data extraction in processing pipeline
ENABLE_STRUCTURED_EXTRACTION=true

# Enable/disable duplicate detection in processing pipeline
ENABLE_DUPLICATE_DETECTION=true

# Processing batch size for efficient content processing
PROCESSING_BATCH_SIZE=10

# Maximum concurrent processing tasks
PROCESSING_CONCURRENCY=5

# Minimum content quality score threshold (0.0-1.0)
MIN_CONTENT_QUALITY_SCORE=0.6

# Maximum summary length in characters
MAX_SUMMARY_LENGTH=1000

# Similarity threshold for duplicate detection (0.0-1.0)
SIMILARITY_THRESHOLD=0.8

# Maximum content length for AI similarity analysis (prevents memory issues)
GEMINI_MAX_SIMILARITY_CONTENT_LENGTH=2000

# Processing timeout for individual content items (seconds)
CONTENT_PROCESSING_TIMEOUT=30

# Enable/disable AI-powered similarity analysis in duplicate detection
ENABLE_AI_SIMILARITY_ANALYSIS=true

# Maximum concurrent AI similarity analyses (prevents memory exhaustion)
MAX_CONCURRENT_AI_ANALYSES=10

# =============================================================================
# PERFORMANCE AND RESOURCE SETTINGS
# =============================================================================

# Maximum memory usage for processing (MB)
MAX_PROCESSING_MEMORY=1024

# Enable/disable memory monitoring
ENABLE_MEMORY_MONITORING=true

# Processing result cache TTL (seconds)
PROCESSING_CACHE_TTL=3600

# Enable/disable processing result caching
ENABLE_PROCESSING_CACHE=true

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================

# Health check timeout (seconds)
HEALTH_CHECK_TIMEOUT=10

# Agent test timeout (seconds)
AGENT_TEST_TIMEOUT=5

# Enable/disable detailed health check logging
ENABLE_HEALTH_CHECK_LOGGING=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=300
